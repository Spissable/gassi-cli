{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "suspicious": {
            "noExplicitAny": "off"
        }
      }
    },
    "formatter": {
      "enabled": true
    },
    "files": {
      "ignore": ["src/metadata.ts"]
    },
    "javascript": {
      "parser": {
        "unsafeParameterDecoratorsEnabled": true
      },
      "formatter": {
        "quoteStyle": "single",
        "indentStyle": "space",
        "indentWidth": 2
      }
    }
  }
  